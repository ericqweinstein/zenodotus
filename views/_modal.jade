// Login modal
div.modal.hide.fade#modal(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
  div.modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true') x
    h3#modalLabel Log In
  div.modal-body
    - if (error)
      p= error
    form(method='post', action='/login', id='loginForm')
      p E-mail:
      input(type='text', name='email')
      br
      p Password:
      input(type='password', name='password')
      br
      br
      button(type ='submit').btn.btn-success Log in
      button.btn.pull-right(data-dismiss='modal', aria-hidden='true') Close

