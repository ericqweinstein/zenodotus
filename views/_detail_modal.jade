// Book detail modal
div.modal.hide.fade#detail(tabindex='-1', role='dialog', aria-labelledby='detailModalLabel', aria-hidden='true', ng-controller='BookCtrl')
  div.modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
    h3#detailModalLabel {{books[currentTitleIndex].title}}
  div.modal-body
    div.detail-left-column
      img(src='http://content-3.powells.com/cgi-bin/imageDB.cgi?isbn={{books[currentTitleIndex].isbn}}').jacket
    div.detail-right-column.span4
      p ISBN:
        span.isbn {{" " + books[currentTitleIndex].isbn}}
      p {{bookDescription}}
  div.modal-footer
    a(href='http://www.amazon.com/').btn.pull-left View on Amazon
    a(href='/checkout').btn.btn-success.pull-left Check out
    button(type='button', data-dismiss='modal', aria-hidden='true').btn.pull-right Close

