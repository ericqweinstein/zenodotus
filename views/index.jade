doctype 5
html(ng-app)
  head
    title Hacker School Library

    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/custom.css')
    script(src='http://code.jquery.com/jquery-latest.min.js')
    script(src='js/bootstrap.min.js')
    script(src='lib/angular/angular.min.js')
    script(src='book.js')

  body
    include _header

    div.hero-unit
      h1 Hacker School Library
      p.lead.indent Programming books and resources

    div.row
      div(ng-controller='BookCtrl')
        p.lead.notification We currently have {{count()}} and counting.

        div.span7
        a(href='/books').btn.btn-success.btn-large Check them out

