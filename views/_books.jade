div.row.books-container(ng-controller='BookCtrl')
  include _detail_modal
  div.span7.offset4
    form.form-search.offset2
      input(type='text', placeholder='Search', ng-model='searchText').input.search-query

    ul.books
      li(ng-repeat='book in books | filter: searchText', ng-class="{'unavailable-detail' : !book.available}")
        i.icon-book
        span {{" " + book.title + " "}}
        span ({{"Quantity: " + book.quantity}})
        a.btn.btn-mini.pull-right.span1.book-title(href='/{{$index}}/#detail', ng-class="{'disabled btn-danger unavailable-link': !book.available, 'btn-success': book.available}", data-toggle='modal', ng-click='fetch($event)') {{book.available && "Details" || "Unavailable"}}
        br
        br

